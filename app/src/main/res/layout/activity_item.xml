<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tukic.projectretrofit.activities.ItemActivity">



    <TextView
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First name:"
        android:id="@+id/fname"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/addName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="85dp"
        android:textColorLink="@android:color/holo_blue_light"
        />

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="68dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last name:"
        android:id="@+id/lname"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/addLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addName"
        android:layout_marginLeft="85dp"
        android:textColorLink="@android:color/holo_blue_light"/>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Index number:"
        android:id="@+id/inNum"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/addIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addLastName"
        android:textColorLink="@android:color/holo_blue_light"
        android:layout_marginLeft="105dp"/>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/deleteStudent"
        android:background="@drawable/ic_delete_black_24dp"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/addIndex"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:backgroundTint="@color/colorAccent"/>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/updateStudent"
        android:background="@drawable/ic_update_black_24dp"
        android:layout_alignTop="@+id/deleteStudent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/colorAccent"/>



</RelativeLayout>
